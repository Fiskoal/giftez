<div class="w-full bg-gray-900 dark:bg-gray-700">

    <div class="flex bg-gray-900 dark:bg-gray-700">
      <div class="flex-1 flex flex-col overflow-hidden">
        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-300 dark:bg-gray-700">

          <div class="container mx-auto px-6 py-8">

            <div>

              <div class="py-10 rounded-lg shadow-lg transition-fade" style="
                    background: linear-gradient(
                      90deg,
                      #667eea 0%,
                      #764ba2 100%
                    );
                  ">
                <div class="w-screen container mx-auto px-6">
                  <h2 class="text-4xl font-bold text-white filter drop-shadow-lg">
                    Welcome, {{user.username}}
                  </h2>
                </div>
              </div>

              <hr class="w-100 h-2 my-5 bg-gray-400 rounded-full dark:bg-indigo-300" />
            </div>

            <div class="mt-4">
              <div class="flex flex-wrap -mx-6 ">
                <div class="w-full px-6 sm:w-full xl:w-full transition-fade">
                  <div class="flex items-center justify-center text-center px-5 py-6 shadow-sm rounded-md bg-white dark:bg-gray-300 shadow-lg">
                    <div class="mx-5">
                      <h4 class="text-2xl font-semibold text-center text-gray-700 dark:text-gray-700">
                        {{user.wishlists.length}}
                      </h4>
                      <h4 class="text-xl font-semibold text-center text-gray-500 dark:text-gray-700">
                        Wish Lists
                      </h4>
                    </div>
                  </div>
                </div>
                </div>
              </div>
            </div>

            

            <div class="mt-8">
            <div class="mt-8">
              <div class="mt-8 flex lg:mt-0 lg:flex-shrink-0 justify-center items-center">
                <div class="inline-flex rounded-md shadow transition-fade">
            {{#each user.wishlists}}
                  <a href="https://giftez.herokuapp.com/wishlists/{{this.id}}"
                    class="wishlistButton dark:bg-gray-600 inline-flex items-center justify-center px-5 py-3 mx-3 mb-10 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-600 dark:text-indigo-100 shadow-md dark:hover:bg-indigo-700" data-wishlist="{{this.id}}">
                    {{this.name}}
                  </a>
            {{/each}}
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

  <div class="bg-gray-300 pb-20 flex items-center justify-center dark:bg-gray-700">
	<form class="wishlist-form w-full md:w-1/3 bg-white rounded-lg items-center dark:bg-gray-600 shadow-2xl dark:shadow-2xl transition-fade">
		<div class="flex font-bold justify-center mt-6">
		   <i class="fas fa-gift fa-5x text-indigo-700 filter drop-shadow-lg dark:text-indigo-300"></i>
		</div>
		<h2 class="text-3xl text-center text-indigo-500 mb-4 mt-4 dark:text-indigo-200">Create a new list</h2>
		<div class="px-12 pb-10">
			 <div class="w-full mb-2">
				<div class="flex justify-center">
				   <input type='text' id="new-name" placeholder="Name"
					  class="px-8  w-full border rounded py-2 text-gray-700 focus:outline-none items-center dark:bg-gray-200 dark:text-gray-900 shadow-inner" />
				</div>
			 </div>
			<div class="w-full mb-2">
			<div class="flex justify-center">   
			   <input type='text' id="new-description" placeholder="Description (optional)"
				  class="px-8  w-full border rounded py-2 text-gray-700 focus:outline-none items-center dark:bg-gray-200 dark:text-gray-900 shadow-inner" />
			</div>
			<button type="submit" id="create-button" class="z-5 w-full mt-6 py-2  rounded bg-indigo-500 text-gray-100 focus:outline-none dark:bg-indigo-500 transition-fade">Create</button>
    </form>
</div>
</div>
</div>
  </div>

<script src="/js/profile.js"></script>